<body>
    <header>
        <div class="topheader">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 logo"><a href="@Url.Action("TrangChu","BanHang")"> <img src="~/Ảnh/logobtl.png" /></a></div>
                    <div class="col-md-5">
                        <div class="search">

                            <form asp-action="SearchResults" asp-controller="BanHang" method="post">

                                    @Html.TextBox("timkiem", "", htmlAttributes: new { @class = "form-control", @placeholder = "Nhập sản phẩm bạn cần tìm vào đây" })
