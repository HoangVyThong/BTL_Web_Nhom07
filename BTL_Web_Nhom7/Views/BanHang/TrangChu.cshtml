			<div class="row">
				@foreach (var i1 in ViewBag.sanPham1)
				{
					if (i1.An == true)
					{
						continue;
					}
					Decimal? Giaban = i1.GiaBan;
					if (i1.SoLuong == 0)
					{
						Giaban = -1;
					}
